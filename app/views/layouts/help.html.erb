  <head>
    <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
    <title><%= @title %></title>
    <%= stylesheet_link_tag "help" %>
    <%= stylesheet_link_tag 'blueprint/screen', :media => 'screen, projection' %>
