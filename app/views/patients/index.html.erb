<h1>Listing patients</h1>

<table>
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th>Address</th>
    <th>Phone number</th>
    <th>Date of birth</th>
    <th>Father</th>
    <th>Mother</th>
    <th>Contact emails</th>
    <th>Origin</th>
    <th>Referenced by</th>
    <th>Observations</th>
  </tr>

<% @patients.each do |patient| %>
  <tr>
    <td><%=h patient.first_name %></td>
    <td><%=h patient.last_name %></td>
    <td><%=h patient.address %></td>
    <td><%=h patient.phone_number %></td>
    <td><%=h patient.date_of_birth %></td>
    <td><%=h patient.father %></td>
    <td><%=h patient.mother %></td>
    <td><%=h patient.contact_emails %></td>
    <td><%=h patient.origin %></td>
    <td><%=h patient.referenced_by %></td>
    <td><%=h patient.observations %></td>
    <td><%= link_to 'Show', patient %></td>
    <td><%= link_to 'Edit', edit_patient_path(patient) %></td>
    <td><%= link_to 'Destroy', patient, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New patient', new_patient_path %>